@{
    ViewBag.Title = "AddClients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function checkLoginForm(form) {
        if (form.username.value != "" || form.password.value != "") {
            $("#errorLabel").hide();
            $("#errorLabel2").hide();
        }
        if (form.username.value == "") {
            $("#errorLabel").show();
            $("#errorLabel").text("Please enter UserName");
            form.username.focus();
            return false;
        }
        if (form.password.value == "") {
            $("#errorLabel2").show();
            $("#errorLabel2").text("please enter Password");
            form.password.focus();
            return false;
        }
        return true;
    }

</script>





    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Client Instance</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <table>
            <form role="form" onsubmit="return checkLoginForm(this);" action="~/Home/CreateClients" method="post" class="col-lg-5">

                <div class="form-group col-lg-10">
                    <label>Client URL(instance)</label>
                    <input class="form-control" placeholder="Databe Server Name or IP" name="URL" autofocus="autofocus">
                </div>

                <div class="col-lg-4">

                    <div class="form-group">
                        <label>Server</label>
                        <input class="form-control" placeholder="Databe Server Name or IP" name="servername" autofocus="autofocus">
                    </div>

                    <div class="form-group">
                        <label>Database</label>
                        <input class="form-control" placeholder="Name of Database" name="database">
                    </div>

                    <div class="form-group">
                        <label>Login</label>
                        <input class="form-control" placeholder="Database Login" name="login">
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" placeholder="Password" name="password">
                    </div>

                </div>

                <div class="col-lg-2" style="align-items:center">
                    <br /><br />
                    <br /><br />
                    <br /><br />
                    <button type="submit" class="btn btn-success button" style="width:100%; height:50px"><i class="fa fa-link" aria-hidden="true"></i>&nbsp;&nbsp; Connect</button>
                    <br /><br />
                    <br /><br />
                    <br /><br />
                    <br /><br />
                    <a href="~/Home/SaveClient"><button type="button" class="btn btn-success">Save</button></a>
                    <button type="reset" class="btn btn-success" onclick="window.history.go(-1); return false;">Cancel</button>
                </div>

                <div class="col-lg-4">

                    <div class="form-group">
                        <label>Client Name</label>
                        <input class="form-control" placeholder="Enter Email ID" name="name" value="@ViewBag.companyname" readonly>
                    </div>
                    <div class="form-group">
                        <label>Authentication Code</label>
                        <input class="form-control" placeholder="Mobile NUmber" name="code" value="@ViewBag.code" readonly>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <input class="form-control" placeholder="Enter connection string" name="status" value="@ViewBag.status" readonly>
                    </div>
                    <div class="form-group">
                        <label>Effective Date</label>
                        <input class="form-control" placeholder="Enter connection string" name="date" value="@ViewBag.date" readonly>
                    </div>

                </div>
            </form>
        </table>
    </div>
