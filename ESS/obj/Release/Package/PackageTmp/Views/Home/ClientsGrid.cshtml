@{
    ViewBag.Title = "Clients";
    Layout = null;
}

    <div class="row">
        <div class="col-lg-12">

            <table class="table table-striped table-bordered" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            Client_Name
                        </th>
                        <th>
                            Auth_Code
                        </th>
                        <th>
                            URL
                        </th>

                        <th>
                            Server
                        </th>
                        <th>
                            Database
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>
                                @x.CLIENT_ID
                            </td>
                            <td>
                                @x.CLIENT_NAME
                            </td>
                            <td>
                                @x.AUTH_CODE
                            </td>
                            <td>
                                <a href="@Url.Action(controllerName: "Home", actionName: "LoadSecurityTables", routeValues: new { name = @x.CLIENT_URL })">@x.CLIENT_URL</a>
                            </td>
                            <td>
                                @x.SERVER_NAME
                            </td>
                            <td>
                                @x.DATABASE_NAME
                            </td>

                            <td>
                                @*<a href="@Url.Action(controllerName: "Home", actionName: "EditClients", routeValues: new { Id = @x.Clients_Id })" class="btn btn-info btn-circle" role="button"><i class="fa fa-check"></i></a>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="@Url.Action(controllerName: "Home", actionName: "DeleteClients", routeValues: new { Id = @x.Clients_Id })" class="btn btn-warning btn-circle" role="button"><i class="fa fa-times"></i></a>*@

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
   
